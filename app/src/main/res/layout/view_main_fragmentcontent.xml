<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="0dp"
    android:background="@android:color/white">
    <com.happy.beijingnews.view.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </com.happy.beijingnews.view.NoScrollViewPager>
    <RadioGroup
        android:id="@+id/rg_main_framentcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal"
        android:layout_marginLeft="0dp">

        <RadioButton
            android:id="@+id/rb_main_framentcontent_home"
            style="@style/MyRadioButtonStyle"
            android:drawableTop="@drawable/selector_main_rb_home"
            android:text="主页" />

        <RadioButton
            android:id="@+id/rb_main_framentcontent_newscenter"
            style="@style/MyRadioButtonStyle"
            android:drawableTop="@drawable/selector_main_rb_newscenter"
            android:text="新闻" />

        <RadioButton
            android:id="@+id/rb_main_framentcontent_smartserver"
            style="@style/MyRadioButtonStyle"
            android:drawableTop="@drawable/selector_main_rb_smartserver"
            android:text="智慧" />

        <RadioButton
            android:id="@+id/rb_main_framentcontent_govaffair"
            style="@style/MyRadioButtonStyle"
            android:drawableTop="@drawable/selector_main_rb_govaffair"
            android:text="政要" />

        <RadioButton
            android:id="@+id/rb_main_framentcontent_setting"
            style="@style/MyRadioButtonStyle"
            android:drawableTop="@drawable/selector_main_rb_setting"
            android:text="设置" />

        <!--android:textSize="14sp"
           android:drawablePadding="5dp"
           android:button="null"
           android:layout_gravity="center_vertical"
           android:textColor="@drawable/selector_main_rb_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"-->
    </RadioGroup>
</LinearLayout>